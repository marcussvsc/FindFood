<%= title "Homepage FindFood" %>

<div class="row">
  <div class="col-xs-8">
    <% @restaurants.each do |restaurant| %>
      <h2><%= link_to restaurant.name, restaurant %></h2>
      <hr>
    <% end %>
  </div>

  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Category</h3>
      </div>
      <div class="panel-body">
        <ul>
          <li><%=link_to "TODAS AS CATEGORIAS", homepage_restaurants_path() %></li>
          <% @categories.each do |category| %>
            <li>
              <%= link_to category.description, homepage_restaurants_path(category_id: category.id) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/restaurants/homepage", method: "post") do %>
          <%= text_field_tag(:search_term) %>
          <%= submit_tag("Search") %>
        <% end %>
      </div>
    </div>

  </div>
</div>
